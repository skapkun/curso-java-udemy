package listaEstruturaSequencial;
import java.util.Scanner;
import java.util.Locale; 
import java.lang.Math; 
 

/*Sistema Operacional: Windows 10
T�pico: Estrutura Sequencial
Compilador: Eclipse
Data: 22/12/2022
